<Window x:Class="ColorPicker.ZoomWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Width="100" Height="100">
    <Border Background="White" Opacity="0.9" CornerRadius="5">
        <Canvas x:Name="ZoomCanvas" Width="100" Height="100">
            <Rectangle x:Name="ZoomRectangle" Stroke="Black" StrokeThickness="1" Width="100" Height="100" RadiusX="5" RadiusY="5"/>
        </Canvas>
    </Border>
</Window>
